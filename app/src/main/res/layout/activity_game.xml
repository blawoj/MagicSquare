<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ja.magicsquare.Game">

    <!-- Linia pierwsza -->
    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:background="@color/blue"
        android:id="@+id/view" />

    <!-- Linia druga -->
    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:background="@color/blue"
        android:id="@+id/view1"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <!-- Linia trzecia -->
    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:background="@color/blue"
        android:id="@+id/view3"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tableLayout2" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true">

        <!-- Pierwszy wiersz -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:id="@+id/number00"
                android:hint=" \?"
                android:digits="123456789"
                android:maxLength="1"
                android:layout_column="0"
                android:layout_gravity="top"
                android:textColor="@color/green"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=" + "
                android:id="@+id/plus01"
                android:layout_column="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number02"
                android:hint=" \?"
                android:digits="123456789"
                android:maxLength="1"
                android:layout_column="2"
                android:textColor="@color/green"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=" + "
                android:id="@+id/plus03"
                android:layout_column="3" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number04"
                android:hint=" \?"
                android:digits="123456789"
                android:maxLength="1"
                android:layout_column="4"
                android:textColor="@color/green"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=" = "
                android:id="@+id/equal05"
                android:layout_column="5" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:id="@+id/sum06"
                android:layout_column="6"
                android:enabled="false"
                android:textColor="@color/green"/>

        </TableRow>

        <!-- Drugi wiersz -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="   + "
                android:id="@+id/plus10"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="   + "
                android:id="@+id/plus12"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="   + "
                android:id="@+id/plus14"
                android:layout_column="4" />
        </TableRow>

        <!-- Trzeci wiersz -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number20"
                android:hint=" \?"
                android:digits="123456789"
                android:maxLength="1"
                android:layout_column="0"
                android:textColor="@color/green"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=" + "
                android:id="@+id/plus21"
                android:layout_column="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number22"
                android:hint=" \?"
                android:digits="123456789"
                android:maxLength="1"
                android:layout_column="2"
                android:textColor="@color/green"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=" + "
                android:id="@+id/plus23"
                android:layout_column="3" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number24"
                android:hint=" \?"
                android:digits="123456789"
                android:maxLength="1"
                android:layout_column="4"
                android:textColor="@color/green"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=" = "
                android:id="@+id/equal25"
                android:layout_column="5" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13"
                android:id="@+id/sum26"
                android:layout_column="6"
                android:enabled="false"
                android:textColor="@color/green"/>
        </TableRow>

        <!-- Czwarty wiersz -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="   + "
                android:id="@+id/plus30"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="   + "
                android:id="@+id/plus32"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="   + "
                android:id="@+id/plus34"
                android:layout_column="4" />
        </TableRow>

        <!-- Piąty wiersz -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number40"
                android:hint=" \?"
                android:digits="123456789"
                android:maxLength="1"
                android:layout_column="0"
                android:textColor="@color/green"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=" + "
                android:id="@+id/plus41"
                android:layout_column="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number42"
                android:hint=" \?"
                android:digits="123456789"
                android:maxLength="1"
                android:layout_column="2"
                android:textColor="@color/green"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=" + "
                android:id="@+id/plus43"
                android:layout_column="3" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number44"
                android:hint=" \?"
                android:digits="123456789"
                android:maxLength="1"
                android:layout_column="4"
                android:textColor="@color/green"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=" = "
                android:id="@+id/equal45"

                android:layout_column="5" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:id="@+id/sum46"
                android:layout_column="6"
                android:enabled="false"
                android:textColor="@color/green"/>
        </TableRow>

        <!-- Szósty wiersz -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="   = "
                android:id="@+id/equal50"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="   = "
                android:id="@+id/equal52"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="   = "
                android:id="@+id/equal54"
                android:layout_column="4" />
        </TableRow>

        <!-- Siódmy wiersz -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:id="@+id/sum60"
                android:layout_column="0"
                android:enabled="false"
                android:textColor="@color/green"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:id="@+id/sum62"
                android:layout_column="2"
                android:enabled="false"
                android:textColor="@color/green"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14"
                android:id="@+id/sum64"
                android:layout_column="4"
                android:enabled="false"
                android:textColor="@color/green"/>
        </TableRow>

    </TableLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/dots"
        android:id="@+id/textView"
        android:layout_below="@+id/tableLayout"
        android:layout_centerHorizontal="true" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_centerHorizontal="true"
        android:id="@+id/tableLayout2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:onClick="submit"
                android:id="@+id/submit"
                android:layout_column="0" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/conti"
                android:enabled="false"
                android:id="@+id/conti"
                android:onClick="resume"
                android:layout_column="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_game"
                android:onClick="initialize"
                android:id="@+id/NewGame"
                android:enabled="false"
                android:layout_column="0" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/level"
                android:id="@+id/level"
                android:onClick="levels"
                android:layout_column="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help"
                android:onClick="help"
                android:id="@+id/help"
                android:layout_column="0" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exit"
                android:onClick="exit"
                android:id="@+id/exit"
                android:layout_column="1" />

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view3"
        android:layout_centerHorizontal="true">


        <Chronometer
            android:id="@+id/chronometer1"
            android:textColor="#4169E1"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button5"
            android:layout_centerHorizontal="true"
            android:text="Chronometer"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>


</RelativeLayout>
